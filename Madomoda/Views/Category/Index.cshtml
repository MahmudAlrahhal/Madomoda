@model List<Category>

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>Create a new category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model.OrderBy(x => x.DisplayOrder))
            {
                <tr>
                    <th>@cat.Name</th>
                    <th>@cat.DisplayOrder</th>

                    <th>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary mx-2">
                                Edit<i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger mx-2">
                                Delete<i class="bi bi-trash-fill"></i>
                            </a>

                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>