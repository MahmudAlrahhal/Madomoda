@model Category

<form action="post">
    <div class="border p-3 mt-4 border-4"> <!--padding 3 and margin top of 4-->
        <div class="row pb-2"> <!--padding bottom of 2-->
            <h2 class="text-primary">Create Category</h2>
            <hr/> <!--Horizontal line-->
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Name of Category</label>
            <input type="text" class="form-control border border-3" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Order Display</label>
            <input type="text" class="form-control border border-3" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3"> <!--If the screen size is larger than medium, take just 3 columns-->
                <button type="submit" class="btn btn-primary form-control">Add new Category</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="form-control btn btn-outline-secondary">Return to Category List</a>
            </div>
        </div>
    </div>
</form>